# ===== Bank Statement Converter - Environment Variables =====

# Node Environment
NODE_ENV=development

# ===== Storage Configuration =====
# Vercel Blob Storage (Production)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx

# Vercel KV Storage (Production)
KV_REST_API_URL=https://your-kv-instance.kv.vercel-storage.com
KV_REST_API_TOKEN=your_kv_token_here

# Force blob storage in development (set to 'true' to test blob storage locally)
FORCE_BLOB=false

# File Settings
MAX_FILE_SIZE_MB=50
FILE_RETENTION_HOURS=24

# ===== Processing Configuration =====
# Timeout for PDF processing (milliseconds)
PROCESSING_TIMEOUT_MS=60000

# Maximum concurrent processing jobs
MAX_CONCURRENT_JOBS=10

# ===== PDF Processing =====
# OCR Settings (for scanned PDFs)
ENABLE_OCR=true
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=60

# ===== Validation Rules =====
# Date validation
MAX_FUTURE_DAYS=7
MAX_PAST_YEARS=10

# Amount validation
MAX_TRANSACTION_AMOUNT=999999.99
DECIMAL_PLACES=2

# Balance validation tolerance
BALANCE_TOLERANCE=0.02

# ===== Excel Output =====
# Default format
DEFAULT_OUTPUT_FORMAT=xlsx
INCLUDE_SUMMARY_SHEET=true
INCLUDE_PROCESSING_LOG=true

# ===== Security =====
# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.vercel.app

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=30

# API Key (optional, for protected endpoints)
API_KEY=

# ===== Logging =====
# Log level: DEBUG, INFO, WARN, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed logging
VERBOSE_LOGGING=false

# ===== Database (Optional) =====
# PostgreSQL connection (if using database for logging)
DATABASE_URL=

# ===== External Services (Optional) =====
# AWS S3 (if using instead of Vercel Blob)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Cloudflare R2 (alternative storage)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# ===== Monitoring & Analytics (Optional) =====
# Sentry for error tracking
SENTRY_DSN=

# Analytics
ANALYTICS_ID=

# ===== Feature Flags =====
# Enable experimental features
ENABLE_BATCH_PROCESSING=false
ENABLE_AUTO_CATEGORIZATION=false
ENABLE_MACHINE_LEARNING=false

# ===== Bank Format Configuration =====
# Path to bank formats config
BANK_FORMATS_CONFIG=api/config/bank-formats.json

# Default bank format (if auto-detection fails)
DEFAULT_BANK_FORMAT=generic

# ===== Development Tools =====
# Enable debug mode
DEBUG=false

# Mock data for testing
USE_MOCK_DATA=false

# Skip actual PDF processing (for UI testing)
SKIP_PDF_PROCESSING=false
